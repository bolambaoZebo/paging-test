<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecondHiltApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#171616</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="snackbarTextViewStyle">@style/SnackBarText</item>
        <item name="snackbarButtonStyle">@color/purple_700</item>
        <item name="snackbarStyle">@style/MySnackbar</item>

        <item name="android:textColor">@color/purple_700</item>


    </style>

    <style name="SplashScreenBackground" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="android:layout_margin">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="actionTextColorAlpha">1.0</item>
        <item name="android:background">@drawable/snackbar_background</item>
    </style>

    <style name="SnackBarText" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.SecondHiltApp.Fullscreen" parent="Theme.SecondHiltApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.SecondHiltApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.SecondHiltApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="Theme.SecondHiltApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SecondHiltApp.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SecondHiltApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>